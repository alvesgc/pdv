@media (max-width: 1024px) {
  .logo-viva {
    height: 10rem;
  }
  .VRVestLogo {
    height: 10rem;
  }
  .main-heading {
    font-size: 1.5rem;
  }
}

@media (max-width: 768px) {
  .main-container {
    flex-direction: column;
    height: auto;
    overflow-y: auto;
  }

  .left-section,
  .right-section {
    width: 100%;
    padding: 1rem;
    text-align: center;
  }

  .header {
    flex-direction: column;
    align-items: center;
  }

  .logo-viva,
  .VRVestLogo {
    height: 8rem;
  }

  .login-form {
    margin-top: 2rem;
    width: 90%;
    max-width: 400px;
  }
}

@media (max-width: 480px) {
