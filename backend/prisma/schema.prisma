generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int     @id @default(autoincrement())
  name      String
  price     Float
  quantity  Int
  createdAt DateTime @default(now())
}

model LogAlteracao {
  id              Int      @id @default(autoincrement())
  acao            String   // INSERT | UPDATE | DELETE
  alteracao       String   
  dataHora        DateTime @default(now())
  usuarioId       Int
}
